    }

    </style>



</head>
<body>
    <div style="margin: 0 auto;display: block;width: 500px;">
        <h1> Informe Patológico </h1>
        
        
        <table width="100%" border="1">



        {% set repportdate = date() | date('Y-m-d H:i:s') %}



         <tr>
                <td>Nombre del paciente:</td>
                <td>{{name}}</td>
            </tr>
 <tr>
            



                <tr>
<td>Médico/a que atendió al paciente:</td>
<td>
<ul>
 {% for medic in medicos %}
              <li>  {{ medic }} </li>
    {% endfor %}
 </ul>           
</td>
</tr>

            </tr>
            {#
            <tr>
                <td>Apellidos del alumno :</td>
                <td>{{surname}}</td>
            </tr>
            #}
             <tr>
                <td>Fecha de la valoración</td>
             <td> {{ date ? date|date('d-m-Y H:i:s') : ''}}</td>

                


            </tr>


<tr>
<td>Pruebas realizadas </td>
<td>
<ul>
 {% for prueba in pruebas %}
              <li>  {{ prueba }} </li>
    {% endfor %}
 </ul>           
</td>
</tr>

<tr>
<td>Patologías identificadas</td>
<td>
<ul>
 {% for patologia in patologias %}
              <li>  {{ patologia }} </li>
    {% endfor %}
 </ul>           
</td>
</tr>


<tr>
<td>Tratamientos </td>
<td>
<ul>
 {% for trat in trats %}
              <li>  {{ trat}} </li>
    {% endfor %}
 </ul>           
</td>
</tr>
  </table>

    <h5> Firma difigitial/logo oficial del centro </h5><br/>
         <img src="{{imageSrc}}" style="width:100px;margin-left:30%"> 




      
    </div>
</body>
</html>